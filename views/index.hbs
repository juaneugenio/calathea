<div class="container">
  <div class="row ">
    {{#each allPosts}}
    <div class="col-md-4 col-sm-6 px-3 py-3">
      <div class="product-grid2 h-auto">
        <div class="product-image2 ">
          <a href="/posts/{{this._id}}">
            <img src="{{imageUrl}}" class="card-img-top h-50 " alt="{{title}}"
            />
        </div>
        <div class="product-content text-align-left px-0 py-3">
          <h3 class="title"><a href="/posts/{{this._id}}"><b>{{title}}.</b></a></h3>
          <span class="description">{{text}}</span>
        </div>
      </div>
    </div>
    {{else}}
    <p>Oh no! There are no Posts yet!</p>
  {{/each}}
  </div>
</div>

